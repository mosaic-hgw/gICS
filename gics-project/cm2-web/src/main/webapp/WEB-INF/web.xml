<!-- This web.xml file is not required when using Servlet 3.0 container, 
	see implementation details http://jersey.java.net/nonav/documentation/latest/jax-rs.html#d4e194 -->
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>gics-web</display-name>
	<welcome-file-list>
		<welcome-file>html/public/index.xhtml</welcome-file>
	</welcome-file-list>
	<session-config>
	    <session-timeout>180</session-timeout>
	</session-config>
	<!-- Remove Comments from Sources, otherwise they will be uncommented and 
		used -->
	<context-param>
		<param-name>javax.faces.FACELETS_SKIP_COMMENTS</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.UPLOADER</param-name>
		<param-value>commons</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.FONT_AWESOME</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
		<param-value>true</param-value>
	</context-param>
	<filter>
		<filter-name>PrimeFaces FileUpload Filter</filter-name>
		<filter-class>org.primefaces.webapp.filter.FileUploadFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>PrimeFaces FileUpload Filter</filter-name>
		<servlet-name>Faces Servlet</servlet-name>
	</filter-mapping>
	
	<!-- Error pages -->
	<error-page>
		<error-code>401</error-code>
		<location>/html/public/error.xhtml?code=401</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/html/public/error.xhtml?code=403</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/html/public/error.xhtml?code=404</location>
	</error-page>
	<error-page>
		<exception-type>javax.faces.application.ViewExpiredException</exception-type>
		<location>/html/public/error.xhtml?code=410</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/html/public/error.xhtml?code=500</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/html/public/error.xhtml?code=500</location>
	</error-page>
	
	<!-- JSF -->
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<!-- JSF URL mapping -->
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>

	<!-- JSF UTF-8-Fix -->
	<filter>
		<filter-name>Character Encoding Filter</filter-name>
		<filter-class>org.icmvc.ttp.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Character Encoding Filter</filter-name>
		<servlet-name>Faces Servlet</servlet-name>
	</filter-mapping>

	<!-- PrimeFaces Theme -->
	<context-param>
		<param-name>primefaces.THEME</param-name>
		<param-value>none</param-value>
	</context-param>

	<context-param>
		<param-name>javax.faces.CONFIG_FILES</param-name>
		<param-value>/WEB-INF/template-faces-config.xml</param-value>
	</context-param>
	
	<!-- Restricted pages -->
	<security-role>
		<role-name>role.gics.admin</role-name>
	</security-role>
	<security-role>
		<role-name>role.gics.user</role-name>
	</security-role>
	
	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>TtpRealm</realm-name>
		<form-login-config>
			<form-login-page>/html/public/login.xhtml</form-login-page>
			<form-error-page>/html/public/error.xhtml?code=wrongPassword</form-error-page>
		</form-login-config>
	</login-config>

